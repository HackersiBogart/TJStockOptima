<%= form_with(model: customer, local: true) do |form| %>
  <% if customer.errors.any? %>
    <div class="error-messages">
      <h2><%= pluralize(customer.errors.count, "error") %> prohibited this customer from being saved:</h2>
      <ul>
        <% customer.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<link rel="stylesheet" href="customer.css">
<link rel="stylesheet" href="customer_new.css">
  

<div class="container">
    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :customer_id, class: "form-label" %>
    <%= form.number_field :customer_id, class: "form-control" %>
        <div class="invalid-feedback">
          Please provide a valid Product ID.
        </div>
      </div>

      <div class="col-md-6 form-group">
        <%= form.label :customer_first_name, class: "form-label" %>
    <%= form.text_field :customer_first_name, class: "form-control" %>
        <div class="invalid-feedback">
          Please provide a valid Product Code.
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :customer_last_name, class: "form-label" %>
    <%= form.text_field :customer_last_name, class: "form-control" %>
        <div class="invalid-feedback">
          Please provide a valid Product Name.
        </div>
      </div>

      <div class="col-md-6 form-group">
        <%= form.label :customer_email, class: "form-label" %>
    <%= form.text_field :customer_email, class: "form-control" %>
        <div class="invalid-feedback">
          Please provide a valid Product Description.
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :customer_phone_number, class: "form-label" %>
    <%= form.text_field :customer_phone_number, class: "form-control" %>
        <div class="invalid-feedback">
          Please provide a valid Product Category.
        </div>
      </div>
    </div>

    <div class="form-group">
    <%= form.submit "Add", class: "btn btn-primary", id: "new-button"%>
  </div>

<% end %>

