<p class="notice-message"><%= notice %></p>

<%= render @product %>

<div class="button-group">
  <%= link_to "Edit", edit_product_path(@product), class: "btn btn-primary" %> |
  <%= link_to "Back to products", products_path, class: "btn btn-secondary", id: "show-back-products" %>
  <%= button_to "Delete", @product, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", id: "show-delete-products" %>
</div>