<%= form_with(model: product, local: true, class: "needs-validation", novalidate: true) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="container">
    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :ProductID, class: "form-label" %>
        <%= form.number_field :ProductID, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product ID.
        </div>
      </div>

      <div class="col-md-6 form-group">
        <%= form.label :ProductCode, class: "form-label" %>
        <%= form.text_field :ProductCode, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product Code.
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :ProductName, class: "form-label" %>
        <%= form.text_field :ProductName, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product Name.
        </div>
      </div>

      <div class="col-md-6 form-group">
        <%= form.label :ProductDescription, class: "form-label" %>
        <%= form.text_field :ProductDescription, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product Description.
        </div>
      </div>
    </div>

    <div class="row">
      <div class="col-md-6 form-group">
        <%= form.label :ProductCategory, class: "form-label" %>
        <%= form.text_field :ProductCategory, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product Category.
        </div>
      </div>

      <div class="col-md-6 form-group">
        <%= form.label :ProductUnitPrice, class: "form-label" %>
        <%= form.number_field :ProductUnitPrice, class: "form-control", required: true %>
        <div class="invalid-feedback">
          Please provide a valid Product Unit Price.
        </div>
      </div>
    </div>

    <div class="form-group">
      <%= form.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
