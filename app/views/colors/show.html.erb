

<p style="color: green"><%= notice %></p>

<div id="colors" class="container">
  <div class="row">
    <div class="col-md-4 color-item card mb-4 shadow-sm">
        <div class="card-body">
          <%= image_tag @color.image_color, class: "card-img-top" %>
          <div class="card-text">
          <%= render @color %>
          </div>
        </div>
    </div>
  </div>
</div>
<p class="mt-3">
  <%= link_to "Edit ", edit_color_path(@color),class: "btn btn-primary" %> 
  <%= link_to "Back to colors", colors_path %>
  <%= button_to "Delete", @color, method: :delete, class: "btn btn-danger" %>
</p>  




